<Window x:Class="Pract03._06.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Pract03._06"
        mc:Ignorable="d"
        Title="Практическая работа №6" Height="418" Width="275" ResizeMode="NoResize" Icon="/ТралалелоТралала.ico">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="130"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="162"/>
            <RowDefinition Height="162"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <GroupBox Header="Сумма 1"/>
        <GroupBox Header="Сумма 2" Grid.Row="1"/>
        <GroupBox Header="Операции" Grid.Column="1" Grid.RowSpan="2"/>
        <Button x:Name="btnAddition" Content="Сложить" Height="40" Width="100" Margin="0,20,0,0" Grid.Column="1" Click="Addition_Click" HorizontalAlignment="Center" VerticalAlignment="Top" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" />
        <Button x:Name="btnSubtraction" Content="Вычесть" Height="40" Width="100" Margin="0,80,0,0" Grid.Column="1" Click="Subtraction_Click" HorizontalAlignment="Center" VerticalAlignment="Top" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" />
        <Button x:Name="btnDivision" Content="Делить" Height="40" Width="100" Margin="0,41,0,0" Grid.Column="1" Grid.Row="1" Click="Division_Click" HorizontalAlignment="Center" VerticalAlignment="Top" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" />
        <Button x:Name="btnInfo" Content="О программе" Height="40" Width="100" Margin="0,10,0,0" Grid.Row="2" Click="Info_Click" HorizontalAlignment="Center" VerticalAlignment="Top" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" />
        <Button x:Name="btnExit" Content="Выход" Height="40" Width="100" Margin="0,10,0,0" Grid.Column="1" Grid.Row="2" Click="Exit_Click" HorizontalAlignment="Center" VerticalAlignment="Top" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" />
        <TextBox x:Name="tbRez" IsReadOnly="True" Grid.Column="1" Grid.Row="1" HorizontalAlignment="Center" Margin="0,108,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Height="40" Width="100" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
        <TextBox x:Name="tbDivider" Grid.Column="1" Grid.RowSpan="2" HorizontalAlignment="Center" Margin="0,145,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Height="40" Width="100" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
        <Label Grid.Column="1" Content="Делитель" Margin="18,123,0,0" VerticalAlignment="Top" HorizontalAlignment="Left"/>
        <Label Grid.Column="1" Grid.Row="1" Content="Результат" Margin="18,88,0,0" VerticalAlignment="Top" HorizontalAlignment="Left"/>
        <TextBox x:Name="tbRub1" HorizontalAlignment="Center" Margin="0,30,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Height="40" Width="100" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
        <TextBox x:Name="tbCop1" HorizontalAlignment="Center" MaxLength="2" Margin="0,100,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Height="40" Width="100" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
        <TextBox x:Name="tbRub2" HorizontalAlignment="Center" Margin="0,30,0,0" Grid.Row="1" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Height="40" Width="100" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
        <TextBox x:Name="tbCop2" HorizontalAlignment="Center" MaxLength="2" Margin="0,100,0,0" Grid.Row="1" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Height="40" Width="100" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
        <Label Content="Рубли" Margin="12,10,0,0" VerticalAlignment="Top" HorizontalAlignment="Left"/>
        <Label Content="Копейки" Margin="12,80,0,0" VerticalAlignment="Top" HorizontalAlignment="Left"/>
        <Label Content="Рубли" Margin="12,10,0,0" Grid.Row="1" VerticalAlignment="Top" HorizontalAlignment="Left"/>
        <Label Content="Копейки" Margin="12,80,0,0" Grid.Row="1" VerticalAlignment="Top" HorizontalAlignment="Left"/>
    </Grid>
</Window>
